generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  username     String
  picture      String
  email        String?
  github_id    Int      @unique
  
  sessions     Session[]
  purchases    Purchase[]
}

model Session {
  id        String   @id @map("_id")
  userId    String   @db.ObjectId
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Repo { 
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  link        String   @unique
  description String
  picture     String
  
  purchases Purchase[]
}

model Purchase {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId 
  userId    String   @db.ObjectId
  repoId    String   @db.ObjectId
  createdAt DateTime @default(now())
  
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade) 
  repo      Repo     @relation(references: [id], fields: [repoId], onDelete: Cascade) 

  @@unique([userId, repoId])
}


